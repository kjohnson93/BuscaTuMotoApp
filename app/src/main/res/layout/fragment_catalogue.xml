<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="viewModel"
            type="com.buscatumoto.ui.viewmodels.CatalogueViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".ui.activities.CatalogueActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/collapsingToolbarLayoutTitleColorCollapsed"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:theme="@style/collapsingToolbarLayoutTitleColorCollapsed"
                android:visibility="gone"
                app:title="Catalogo"
                app:titleTextColor="@color/white"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.AppBarLayout>

        <include
            android:id="@+id/catalogue_content"
            layout="@layout/content_catalogue"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            bind:viewModel="@{viewModel}"/>

    </LinearLayout>

</layout>