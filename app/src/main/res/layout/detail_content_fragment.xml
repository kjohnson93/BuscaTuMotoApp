<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.buscatumoto.ui.viewmodels.DetailContentViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/detail_content_maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/detail_content_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/detail_content_collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false">

                <ImageView
                    android:id="@+id/detail_content_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:mutableBackground="@{viewModel.bannerLiveData}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.3"
                    android:background="#000000"
                    android:fitsSystemWindows="true" />

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/detail_content_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="top"
                        android:layout_marginBottom="48dp"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.activities.MotoDetailActivity">



            <TextView
                android:id="@+id/detailTitleTvw"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:mutableText="@{viewModel.modelTitleLiveData}" />

            <TextView
                android:id="@+id/detailHighlightsTvw"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/detailTitleTvw"
                app:layout_constraintStart_toStartOf="@+id/detailTitleTvw"
                app:layout_constraintTop_toBottomOf="@+id/detailTitleTvw"
                app:mutableText="@{viewModel.highLightsLiveData}" />

            <TextView
                android:id="@+id/detailPriceTitleTvw"
                mutableText="@{viewModel.priceTitleLiveData}"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/detailHighlightsTvw"
                app:layout_constraintTop_toBottomOf="@+id/detailHighlightsTvw" />

            <TextView
                android:id="@+id/detailPriceDescTvw"
                mutableText="@{viewModel.priceDescLiveData}"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                app:layout_constraintStart_toStartOf="@+id/detailPriceTitleTvw"
                app:layout_constraintTop_toBottomOf="@+id/detailPriceTitleTvw" />

            <TextView
                android:id="@+id/detailMainDesc"
                mutableText="@{viewModel.mainDescLiveData}"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                app:layout_constraintStart_toStartOf="@+id/detailPriceDescTvw"
                app:layout_constraintTop_toBottomOf="@+id/detailPriceDescTvw" />

            <TextView
                android:id="@+id/detailLicensesTitleTvw"
                mutableText="@{viewModel.licensesTitleLiveData}"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/detailMainDesc"
                app:layout_constraintTop_toBottomOf="@+id/detailMainDesc" />

            <TextView
                android:id="@+id/detailLicensesTvw"
                mutableText="@{viewModel.licensesLiveData}"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/detailLicensesTitleTvw"
                app:layout_constraintTop_toBottomOf="@+id/detailLicensesTitleTvw" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
